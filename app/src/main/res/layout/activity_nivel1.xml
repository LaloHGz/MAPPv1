<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".niveles.algoritmos.Nivel1Activity">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Chronometer
            android:id="@+id/chrono"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="620sp"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:background="@drawable/rectangulo"
            android:orientation="vertical"
            android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/animation_checkmark"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="checkmark.json"
                app:lottie_loop="false"
                />

            <LinearLayout
                android:id="@+id/layout_ejercicios"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:paddingLeft="16dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="500dp"
                    android:layout_weight="1">

                    <EditText
                        android:fontFamily="@font/ttnormspro_medium"
                        android:textColor="@color/GRIS90"
                        android:background="@drawable/cuad"
                        android:inputType="number"
                        android:id="@+id/et_1"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="65dp" />

                    <EditText
                        android:fontFamily="@font/ttnormspro_medium"
                        android:textColor="@color/GRIS90"
                        android:background="@drawable/cuad"
                        android:inputType="number"
                        android:id="@+id/et_2"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="65dp"/>

                    <EditText
                        android:fontFamily="@font/ttnormspro_medium"
                        android:textColor="@color/GRIS90"
                        android:background="@drawable/cuad"
                        android:inputType="number"
                        android:id="@+id/et_3"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="65dp"/>

                    <EditText
                        android:fontFamily="@font/ttnormspro_medium"
                        android:textColor="@color/GRIS90"
                        android:background="@drawable/cuad"
                        android:inputType="number"
                        android:id="@+id/et_4"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="65dp"/>

                    <EditText
                        android:fontFamily="@font/ttnormspro_medium"
                        android:textColor="@color/GRIS90"
                        android:background="@drawable/cuad"
                        android:inputType="number"
                        android:id="@+id/et_5"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="65dp"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="500dp"
                    android:layout_weight="3"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp">
                    <TextView
                        android:fontFamily="@font/ttnormspro_medium"
                        android:padding="5dp"
                        android:enabled="false"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/bton_laoshi"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:background="@drawable/cuadro_press"
                        android:text="@string/bton1"
                        android:textColor="@color/BLANCO"
                        android:textSize="14sp" />

                    <TextView
                        android:fontFamily="@font/ttnormspro_medium"
                        android:padding="5dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:id="@+id/bton_lingdao"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="70sp"
                        android:layout_marginTop="22sp"
                        android:background="@drawable/cuadro_press"
                        android:text="@string/bton2"
                        android:textColor="@color/BLANCO"
                        android:textSize="14sp" />

                    <TextView
                        android:fontFamily="@font/ttnormspro_medium"
                        android:padding="5dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:id="@+id/bton_zhu"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="22sp"
                        android:background="@drawable/cuadro_press"
                        android:text="@string/bton3"
                        android:textColor="@color/BLANCO"
                        android:textSize="14sp" />

                    <TextView
                        android:fontFamily="@font/ttnormspro_medium"
                        android:padding="5dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:id="@+id/bton_aren"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="22sp"
                        android:background="@drawable/cuadro_press"
                        android:text="@string/bton4"
                        android:textColor="@color/BLANCO"
                        android:textSize="14sp" />

                    <TextView
                        android:fontFamily="@font/ttnormspro_medium"
                        android:padding="5dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:id="@+id/bton_houyi"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="22sp"
                        android:background="@drawable/cuadro_press"
                        android:text="@string/bton5"
                        android:textColor="@color/BLANCO"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>


            <Button
                android:fontFamily="@font/ttnormspro_medium"
                android:textAllCaps="false"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/bton_check"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:background="@drawable/pressed_e1"
                android:onClick="Check"
                android:text="@string/Check"
                android:textColor="@color/GRIS50"
                android:textSize="25sp" />



        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

</ScrollView>




</LinearLayout>