<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/GRIS50"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <Button
                        android:id="@+id/boton_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_edit_black_24dp"
                        />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_personaje"
                    android:layout_marginTop="-10dp"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/BLANCO"/>
                <TextView
                    android:fontFamily="@font/ttnormspro_bold"
                    android:id="@+id/Tv_Usuario"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:textColor="@color/NEGRO"/>


                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/fondo_nivel">
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_silver_medal"/>
                    <TextView
                        android:fontFamily="@font/ttnormspro_bold"
                        android:id="@+id/Tv_Ni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nivel"
                        android:textSize="18sp"
                        android:textColor="@color/BLANCO"
                        />
                    <TextView
                        android:fontFamily="@font/ttnormspro_bold"
                        android:id="@+id/Tv_Nivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/BLANCO" />
                </LinearLayout>
            </LinearLayout>



            <ListView
                android:background="@color/GRIS50"
                android:id="@+id/listview"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>








        </LinearLayout>

    </ScrollView>

</LinearLayout>