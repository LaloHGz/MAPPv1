<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio.IntroActivity"
    android:background="@drawable/fondo_onboard11"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:paddingTop="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:fontFamily="@font/ttnormspro_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/BLANCO"
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saltar" />

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/screen_viewpager"
        android:layout_width="match_parent"
        android:layout_height="520dp">

    </androidx.viewpager.widget.ViewPager>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/indicator_selector"
            app:tabIndicatorColor="@color/GRIS50"
            android:layout_marginEnd="120dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.tabs.TabLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="-56dp"
            android:layout_marginEnd="26dp">

            <Button
                android:visibility="gone"
                android:fontFamily="@font/ttnormspro_bold"
                android:id="@+id/botonLogin"
                android:background="@drawable/boton_comenzar_press"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:textAllCaps="false"
                android:text="Comenzar"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawableTint="@color/BLANCO"
                android:drawablePadding="-30dp"
                android:paddingEnd="5dp"
                android:textSize="17sp"
                android:textColor="@color/BLANCO"
                android:elevation="20dp"
                />
            <Button
                android:fontFamily="@font/ttnormspro_bold"
                android:id="@+id/btn_next"
                android:background="@drawable/pressed1"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:textAllCaps="false"
                android:text="Siguiente"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawableTint="@color/BLANCO"
                android:drawablePadding="-30dp"
                android:paddingEnd="5dp"
                android:textSize="17sp"
                android:textColor="@color/BLANCO"
                android:elevation="20dp"/>

        </LinearLayout>

    </LinearLayout>





    <Button
        android:visibility="gone"
        android:fontFamily="@font/ttnorms_bold"
        android:layout_marginTop="20dp"
        android:id="@+id/butongoogle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/pressed"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/BLANCO"
        android:text="Â¿Eres nuevo en Mapp?"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        />

    <TextView
       android:visibility="invisible"
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nocuenta"
        android:textColor="@color/NEGRO"
        android:textSize="13sp"
        android:typeface="sans" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/bton_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registrate"
        android:textColor="@color/colorAZUL_MAPP"
        android:textSize="13sp"
        android:typeface="sans" />



</LinearLayout>