<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".instrucciones.Ins_nivel1Activity"
    android:orientation="vertical"
    android:background="@drawable/fondosplash">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ttnormspro_medium"
                android:id="@+id/title_e1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/nivel1"
                android:textColor="@color/BLANCO"
                android:textSize="27sp"
                />


            <TextView
                android:fontFamily="@font/ttnormspro_medium"
                android:id="@+id/txt_e1"
                android:layout_marginTop="30sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instruccion"
                android:textSize="17sp"
                android:textColor="@color/BLANCO"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_marginTop="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white"
                android:elevation="15dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center">
                <TextView
                    android:fontFamily="@font/ttnormspro_medium"
                    android:layout_gravity="center"
                    android:id="@+id/txt_el2"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ejmplolvl1"
                    android:textColor="@color/NEGRO"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:fontFamily="@font/ttnormspro_medium"
                android:textAllCaps="false"
                android:id="@+id/bton_nextlvl1n"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:background="@drawable/pressed_e1"
                android:text="@string/start"
                android:textColor="@color/GRIS50"
                android:textSize="20sp"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>